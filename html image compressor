    <script>
        // Global state
        let currentPage = 'home';
        let originalImage = null;
        let originalImageData = null;
        let compressedImageData = null;
        let originalFileName = '';
        let originalFileSize = 0;
        
        // DOM elements
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        const pageContent = document.getElementById('pageContent');
        const body = document.body;
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            initNavigation();
            updateActiveNavLink();
            
            // If we're on the image compressor page, initialize its functionality
            if (currentPage === 'image-compressor') {
                initImageCompressor();
            }
        });
        
        // Navigation Functions
        function initNavigation() {
            // Mobile menu toggle
            mobileMenuBtn.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });
            
            // Close mobile menu when clicking a link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    navLinks.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                });
            });
        }
        
        function updateActiveNavLink() {
            // Update active state in navigation
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('onclick') === `loadPage('${currentPage}')`) {
                    link.classList.add('active');
                }
            });
        }
        
        // Page Loading Function
        function loadPage(pageName) {
            // Hide all pages
            document.querySelectorAll('[id$="-page"]').forEach(page => {
                page.style.display = 'none';
            });
            
            // Show the requested page
            const pageElement = document.getElementById(`${pageName}-page`);
            if (pageElement) {
                pageElement.style.display = 'block';
                currentPage = pageName;
                
                // Update body attribute for CSS targeting
                body.setAttribute('data-page', pageName);
                
                // Update navigation
                updateActiveNavLink();
                
                // Scroll to top
                window.scrollTo(0, 0);
                
                // Initialize page-specific functionality
                if (pageName === 'image-compressor') {
                    initImageCompressor();
                } else if (pageName === 'home') {
                    initHomePage();
                }
            }
            
            return false; // Prevent default link behavior
        }
        
        // Home Page Initialization
        function initHomePage() {
            // Animate stats on scroll
            const observerOptions = {
                threshold: 0.5
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Animate stats
                        const statNumbers = document.querySelectorAll('.stat-number');
                        statNumbers.forEach(stat => {
                            const finalValue = stat.textContent;
                            stat.textContent = '0';
                            
                            let current = 0;
                            const increment = parseInt(finalValue) / 50;
                            const timer = setInterval(() => {
                                current += increment;
                                if (current >= parseInt(finalValue)) {
                                    stat.textContent = finalValue;
                                    clearInterval(timer);
                                } else {
                                    stat.textContent = Math.floor(current);
                                }
                            }, 30);
                        });
                        
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            
            const statsSection = document.querySelector('.stats');
            if (statsSection) {
                observer.observe(statsSection);
            }
            
            // Tool card hover effects
            document.querySelectorAll('.tool-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.tool-icon');
                    if (icon) {
                        icon.style.transform = 'scale(1.1) rotate(5deg)';
                    }
                });
                
                card.addEventListener('mouseleave', function() {
                    const icon = this.querySelector('.tool-icon');
                    if (icon) {
                        icon.style.transform = 'scale(1) rotate(0deg)';
                    }
                });
            });
        }
        
        // Image Compressor Initialization
        function initImageCompressor() {
            // DOM Elements
            const fileInput = document.getElementById('file-input');
            const browseBtn = document.getElementById('browse-btn');
            const uploadArea = document.getElementById('upload-area');
            const compressionSlider = document.getElementById('compression-slider');
            const qualityIndicators = document.querySelectorAll('.quality-indicator');
            const originalPreview = document.getElementById('original-preview');
            const compressedPreview = document.getElementById('compressed-preview');
            const originalInfo = document.getElementById('original-info');
            const compressedInfo = document.getElementById('compressed-info');
            const compressBtn = document.getElementById('compress-btn');
            const downloadBtn = document.getElementById('download-btn');
            const resetBtn = document.getElementById('reset-btn');
            const loading = document.getElementById('loading');
            const formatRadios = document.querySelectorAll('.format-radio');
            
            // Reset state
            originalImage = null;
            originalImageData = null;
            compressedImageData = null;
            originalFileName = '';
            originalFileSize = 0;
            
            // Event Listeners
            if (browseBtn) browseBtn.addEventListener('click', () => fileInput.click());
            if (uploadArea) uploadArea.addEventListener('click', () => fileInput.click());
            
            if (fileInput) fileInput.addEventListener('change', handleFileSelect);
            
            if (uploadArea) {
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('dragover');
                });
                
                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('dragover');
                });
                
                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('dragover');
                    
                    if (e.dataTransfer.files.length) {
                        handleFileSelect({ target: { files: e.dataTransfer.files } });
                    }
                });
            }
            
            if (compressionSlider) compressionSlider.addEventListener('input', updateQualityIndicators);
            
            if (qualityIndicators) {
                qualityIndicators.forEach(indicator => {
                    indicator.addEventListener('click', function() {
                        const level = this.getAttribute('data-level');
                        if (compressionSlider) compressionSlider.value = level;
                        updateQualityIndicators();
                        showNotification('Compression level set to ' + this.textContent, 'info');
                    });
                });
            }
            
            if (compressBtn) compressBtn.addEventListener('click', compressImage);
            if (downloadBtn) downloadBtn.addEventListener('click', downloadCompressedImage);
            if (resetBtn) resetBtn.addEventListener('click', resetTool);
            
            // Initialize quality indicators
            updateQualityIndicators();
            
            // Functions
            function handleFileSelect(event) {
                const file = event.target.files[0];
                if (!file || !file.type.match('image.*')) {
                    showNotification('Please select a valid image file (JPEG, PNG, or WebP).', 'error');
                    return;
                }
                
                if (file.size > 10 * 1024 * 1024) {
                    showNotification('File size exceeds 10MB limit. Please choose a smaller image.', 'error');
                    return;
                }
                
                originalFileName = file.name;
                originalFileSize = file.size;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    originalImage = new Image();
                    originalImage.onload = function() {
                        if (originalPreview) originalPreview.src = e.target.result;
                        originalImageData = e.target.result;
                        
                        // Display original file info
                        if (originalInfo) {
                            originalInfo.innerHTML = `<i class="fas fa-info-circle"></i> ${originalFileName} <br> <strong>${formatFileSize(originalFileSize)}</strong>  ${originalImage.width}${originalImage.height}px`;
                        }
                        
                        // Reset compressed preview
                        if (compressedPreview) compressedPreview.src = '';
                        if (compressedInfo) {
                            compressedInfo.innerHTML = `<i class="fas fa-chart-line"></i> Compressed image will appear here`;
                        }
                        if (downloadBtn) downloadBtn.disabled = true;
                        
                        // Enable compress button
                        if (compressBtn) compressBtn.disabled = false;
                        
                        showNotification('Image loaded successfully! Adjust compression settings and click "Compress Image"', 'success');
                    };
                    originalImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
            
            function updateQualityIndicators() {
                if (!compressionSlider) return;
                
                const sliderValue = parseInt(compressionSlider.value);
                
                if (qualityIndicators) {
                    qualityIndicators.forEach(indicator => {
                        const level = parseInt(indicator.getAttribute('data-level'));
                        indicator.classList.remove('active');
                        
                        // Find the closest indicator to the slider value
                        const diff = Math.abs(level - sliderValue);
                        if (diff <= 15) {
                            indicator.classList.add('active');
                        }
                    });
                }
            }
            
            function compressImage() {
                if (!originalImage) {
                    showNotification('Please select an image first.', 'error');
                    return;
                }
                
                // Show loading indicator
                if (loading) loading.style.display = 'block';
                if (compressBtn) compressBtn.disabled = true;
                
                // Get selected format
                let selectedFormat = 'jpeg';
                if (formatRadios) {
                    formatRadios.forEach(radio => {
                        if (radio.checked) selectedFormat = radio.value;
                    });
                }
                
                // Get compression quality (invert slider value for quality)
                const quality = 100 - parseInt(compressionSlider.value) + 1;
                
                // Simulate compression delay
                setTimeout(() => {
                    try {
                        // Create a canvas element
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        
                        // Calculate new dimensions if image is too large
                        let width = originalImage.width;
                        let height = originalImage.height;
                        const maxDimension = 2000;
                        
                        if (width > maxDimension || height > maxDimension) {
                            if (width > height) {
                                height = (height * maxDimension) / width;
                                width = maxDimension;
                            } else {
                                width = (width * maxDimension) / height;
                                height = maxDimension;
                            }
                        }
                        
                        // Set canvas dimensions
                        canvas.width = width;
                        canvas.height = height;
                        
                        // Draw image on canvas with new dimensions
                        ctx.drawImage(originalImage, 0, 0, width, height);
                        
                        // Get compressed image data
                        let compressedDataUrl;
                        if (selectedFormat === 'jpeg') {
                            compressedDataUrl = canvas.toDataURL('image/jpeg', quality/100);
                        } else if (selectedFormat === 'png') {
                            // PNG doesn't have quality parameter
                            compressedDataUrl = canvas.toDataURL('image/png');
                        } else if (selectedFormat === 'webp') {
                            try {
                                compressedDataUrl = canvas.toDataURL('image/webp', quality/100);
                            } catch(e) {
                                console.log('WebP not supported, using JPEG');
                                compressedDataUrl = canvas.toDataURL('image/jpeg', quality/100);
                                selectedFormat = 'jpeg';
                            }
                        }
                        
                        compressedImageData = compressedDataUrl;
                        
                        // Calculate compressed file size
                        const base64Length = compressedDataUrl.length - compressedDataUrl.indexOf(',') - 1;
                        const compressedSize = Math.floor(base64Length * 0.75);
                        
                        // Update compressed preview
                        if (compressedPreview) compressedPreview.src = compressedDataUrl;
                        
                        // Update compressed file info
                        const compressionRatio = Math.round((1 - compressedSize/originalFileSize) * 100);
                        const savings = originalFileSize - compressedSize;
                        
                        if (compressedInfo) {
                            compressedInfo.innerHTML = `
                                <i class="fas fa-chart-line"></i> compressed_${originalFileName}<br>
                                <strong>${formatFileSize(compressedSize)}</strong>  ${compressionRatio}% smaller<br>
                                <span style="color: var(--accent);">Saved: ${formatFileSize(savings)}</span>
                            `;
                        }
                        
                        // Enable download button
                        if (downloadBtn) downloadBtn.disabled = false;
                        
                        // Show success message
                        showNotification(`Image compressed successfully! Saved ${formatFileSize(savings)} (${compressionRatio}%)`, 'success');
                        
                    } catch (error) {
                        console.error('Compression error:', error);
                        showNotification('Error compressing image. Please try again.', 'error');
                    } finally {
                        // Hide loading indicator
                        if (loading) loading.style.display = 'none';
                        if (compressBtn) compressBtn.disabled = false;
                    }
                }, 1000);
            }
            
            function downloadCompressedImage() {
                if (!compressedImageData) {
                    showNotification('No compressed image available.', 'error');
                    return;
                }
                
                // Get file extension based on selected format
                let extension = 'jpg';
                if (formatRadios) {
                    formatRadios.forEach(radio => {
                        if (radio.checked) extension = radio.value;
                    });
                }
                
                // Clean filename and add extension
                const cleanName = originalFileName.replace(/\.[^/.]+$/, "").replace(/[^a-z0-9]/gi, '_').toLowerCase();
                const downloadName = `compressly_${cleanName}_optimized.${extension}`;
                
                // Create a download link
                const link = document.createElement('a');
                link.download = downloadName;
                link.href = compressedImageData;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                showNotification('Download started! Your optimized image is ready.', 'success');
            }
            
            function resetTool() {
                // Reset all inputs and previews
                if (fileInput) fileInput.value = '';
                if (originalPreview) originalPreview.src = '';
                if (compressedPreview) compressedPreview.src = '';
                if (originalInfo) {
                    originalInfo.innerHTML = `<i class="fas fa-info-circle"></i> <span>No image selected</span>`;
                }
                if (compressedInfo) {
                    compressedInfo.innerHTML = `<i class="fas fa-chart-line"></i> <span>Compressed image will appear here</span>`;
                }
                if (compressionSlider) compressionSlider.value = 75;
                if (downloadBtn) downloadBtn.disabled = true;
                if (compressBtn) compressBtn.disabled = true;
                
                // Reset format selection
                if (formatRadios) formatRadios[0].checked = true;
                
                // Reset state variables
                originalImage = null;
                originalImageData = null;
                compressedImageData = null;
                
                // Update quality indicators
                updateQualityIndicators();
                
                showNotification('Tool reset. Ready to compress a new image!', 'info');
            }
        }
        
        // Utility Functions
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        function showNotification(message, type) {
            // Remove existing notifications
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notification => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            });
            
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 12px;">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    <div>${message}</div>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Remove notification after 4 seconds
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }
    </script>
</body>
</html>
