    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-col">
                    <div class="footer-logo">
                        <div class="footer-logo-text">ToolKit<span style="color: #4cc9f0;">Pro</span></div>
